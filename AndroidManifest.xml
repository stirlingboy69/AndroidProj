<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="Android.Arduino.Bluetooth"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <application android:label="@string/app_name" >
        <activity android:name="BluetoothTest"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="BluetoothDevices" android:label="@string/app_name">"
            <intent-filter>
                <action android:name="Android.Arduino.Bluetooth.BLUETOOTHDEVICES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="ButtonSurfaceA" android:label="@string/app_name">"
            <intent-filter>
                <action android:name="Android.Arduino.Bluetooth.BUTTONSURFACEA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>
    <uses-sdk android:minSdkVersion="5" android:targetSdkVersion="9"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <supports-screens android:anyDensity="true" />
</manifest> 
